{% extends "base.html.twig" %}

{% block body %}

    <table class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">nom d'utilisateur</th>
                <th scope="col">Rôle</th>
                <th scope="col">Supprimer</th>
                <th scope="col">Passer en administrateur</th>
                </tr>
            <tbody>
            {% for usager in usagers %}
                <tr>
                   <th scope="row">{{ usager.id }}</th> 
                   <td>{{ usager.nom }}</td>
                   <td>{{ usager.prenom }}</td>
                   <td>{{ usager.email }}</td>
                   <td>{{ usager.roles[0] }}</td>
                   <td> <a href=" {{ path('admin_suppression', {'usagerId': usager.id}) }}"> Supprimer </a></td>
                   <td><a href="{{ path('admin_upgrade', {'usagerId': usager.id}) }}"> Upgrade </a></td>
            {% endfor %}
                </tr>
            </tbody>
        </table>
    
{% endblock %}