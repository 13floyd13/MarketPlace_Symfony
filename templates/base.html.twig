<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
        {% block title %}
            {% trans %}default.index.message_bienvenue{% endtrans %}
        {% endblock %}
        </title>

        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('css/projet.css') }}"
              rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/fontawsome-5.all.min.css') }}"
              rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/bootstrap-4/bootstrap.min.css') }}"
              rel="stylesheet" type="text/css" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        {% endblock %}
    </head>
    
    <body>
        {% include "navbar.html.twig" %}
        
    <main role="main" class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="main-div">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
            {#{% include "aside.html.twig" %}#}
        </div>
    </main>
    <!-- JS : JQuery, Bootstrap -->
    <script src="{{ asset ('js/jquery-3/jquery.slim.min.js') }}" ></script>
    <script src="{{ asset ('js/bootstrap-4/bootstrap.bundle.min.js') }}" ></script>
    <script>
        $(function () {
            // Activation tooltip bootstrap sur la page
            $('[data-toggle="tooltip"]').tooltip();
            // Comportement du bouton de recherche
            $("#searchButton").click(
                function () {
                    var searchString = $('#searchString').val().trim();
                    //location = ('/fr/boutique/chercher/' + searchString); 
                    var path = '{{ path('recherche_page', {'recherche': 'searchString'}) }}';
                    path = path.replace('searchString', searchString);
                    location = path;
                    return false;
                });
        });
    </script>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
