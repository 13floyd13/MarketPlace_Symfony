{% extends "base.html.twig" %}

{% block body %}

<div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Ma Commande</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <tr><th>N° Commande</th><td>{{ commande.id }}</td></tr>
                    <tr><th>Date Commande</th><td>{{ commande.getDateCommande()|date("m/d/Y")}}</td></tr>
                    <tr><th>Prix Total</th><td>{{ prix }}</td></tr>                   
                </table>
            </div>
        </div>
    </div>

    <table class="table table-striped table-sm table-hover">
            <thead>
                <tr>
                <th scope="col">Produit</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix Unitaire</th>
                <th scope="col">Prix de la ligne</th>
                </tr>
            <tbody>
            {% for ligne in lignes %}
                <tr>
                   <td>{{ ligne.getArticle().getLibelle() }}</td>
                   <td>{{ ligne.quantite }}</td>
                   <td>{{ ligne.getArticle().getPrix() }}</td>
                   <td>{{ ligne.quantite *  ligne.getArticle().getPrix()}}</td>
                </tr>
            {% endfor %}
                
            </tbody>
        </table>
{% endblock %}