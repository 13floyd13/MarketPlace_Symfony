{% extends "base.html.twig" %}

{% block body %}
<div class="card col-md-12">
    <div class="card-header">
        <h1><i class="fas fa-store"></i> Produits : {{recherche}} </h1>
    </div>
    <div class="card-body row">
        {% for produit in produits %}
        <div class="col-md-3">
            <div class="card clickable" onclick="location = '/mi5/fr/boutique/rayon/{{produit.id}}'" >
                <img src="{{ asset( produit.visuel ) }}" class="card-img-top" alt={{ produit.libelle }}>
                <div class="card-body">
                    <h4 class="card-title">{{ produit.libelle }}</h4>
                    <p class="card-text"><i>{{ produit.texte }}</i></p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

    {% endblock %}