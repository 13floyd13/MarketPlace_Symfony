{% extends 'base.html.twig' %}

{% block title %}Usager index{% endblock %}

{% block body %}
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Mon Compte</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <tr><th>N° Client</th><td>{{ usager.id }}</td></tr>
                    <tr><th>Nom</th><td>{{ usager.nom }}</td></tr>
                    <tr><th>Prénom</th><td>{{ usager.prenom }}</td></tr>
                    <tr><th>Email</th><td>{{ usager.email }}</td></tr>
                    <tr><th>Activité</th>
                        <td>
                            <a class="btn btn-primary" href="{{ path('commande_liste')}}">
                                <span class="badge badge-light">{{ nombre_commande }}</span> Commande(s)                            
                            </a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
