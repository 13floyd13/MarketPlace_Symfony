{% extends "base.html.twig" %}

{% block body %}

<div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> Ma Commande</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <tr><th>N° Client</th><td>{{ numero_usager }}</td></tr>
                    <tr><th>Nom</th><td>{{ nom_usager }}</td></tr>
                    <tr><th>Prénom</th><td>{{ prenom_usager }}</td></tr>
                    <tr><th>Email</th><td>{{ email_usager }}</td></tr>
                    <tr><th>N° Commande</th><td>{{ numero_commande }}</td></tr>
                    <tr><th>Date Commande</th><td>{{ date_commande }}</td></tr>
                    <tr><th>Prix Total</th><td>{{ prix }}</td></tr>
                    {% for ligne in lignes %}
                        <tr><th>Poduit</th><td>{{ ligne.getArticle().getLibelle() }}</td></tr>
                        <tr><th>Quantité</th><td>{{ ligne.quantite }}</td></tr>
                    {% endfor %}


                    
                </table>
            </div>
        </div>
    </div>
{% endblock %}